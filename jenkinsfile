pipeline{
    agent {label 'OPENJDK-8-UBUNTU'}    
    stages {
        stage('vcs'){
            steps {
                git branch: 'main',
                url : 'https://github.com/bharathonweb/spring-petclinic.git'
               
             }
        }
        
        stage('build'){
             steps {
               sh '/usr/local/apache-maven/apache-maven-3.8.6/bin/mvn package'
            }
        }
        stage ('archive results'){
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
} 
