pipeline{
    agent {label 'OPENJDK-8-UBUNTU'}    
    stages {
        stage('vcs'){
            steps {
                steps {
                git url : 'https://github.com/bharathonweb/spring-petclinic.git',
                git branch: "${params.BRANCH_TO_BUILD}"
            }
            }
        }
        stage ('build'){
             steps {
               sh "/opt/apache-maven-3.8.6/bin/mvn ${params.$MAVEN-GOAL-1}"
            }
        }
        stage ('archive results'){
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
} 
