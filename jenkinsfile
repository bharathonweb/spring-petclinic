pipeline{
    agent {label 'OPENJDK-8-UBUNTU'}    
    stages {
        stage('vcs'){
            steps {
                steps {
                git url : 'https://github.com/bharathonweb/spring-petclinic.git',
                branch : 'main'
            }
            }
        }
        stage ('build'){
             steps {
               sh "/opt/usr/local/apache-maven/apache-maven-3.8.6/bin/mvn ${params.$MAVEN-GOAL-1}"
            }
        }
        stage ('archive results'){
            steps {
                junit '**/surefire-reports/*.xml'
            }
        }
    }
} 
